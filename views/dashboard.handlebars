<div class="lg:flex lg:items-center lg:justify-between">
     <div class="container mx-auto">
        <h2 class="text-2xl leading-7 text-indigo-600 mb-5 sm:truncate sm:text-3xl sm:tracking-tight">
            Welcome to your Dashboard!
        </h2>
        <!-- Loop over each existing blog --> 
        <div class="blog-list">
            {{#each userBlogs as |blog| }}
        <div class="bg-yellow-300 rounded-md p-3 m-3">
            <h3 class="text-center font-bold">
                {{blog.title}}
            </h3>
            <h2 class="text-center">
                Created by {{user.username}}
            </h2>
            <p class="text-center">
                {{blog.contents}}
            </p>
        </div>
        <button class="bg-red-500 rounded-sm p-1 text-white mb-5 ml-2.5" type="submit" id="delete-post" data-id="{{blog.id}}">Delete</button>
        <button class="bg-slate-500 rounded-sm p-1 text-white mb-5 ml-2.5" type="submit" id="edit-post">Edit</button>  
        {{/each}}
        </div>
        <a class="no-button bg-indigo-600 p-3 rounded-md text-white" id="new-post" href="/newPost">Add a Post!</a>
     </div>
</div>

<script src="js/dashboard.js"></script>